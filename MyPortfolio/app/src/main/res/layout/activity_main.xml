<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context="zenlabs.com.myportfolio.MainActivity"
    >

    <TextView
        android:text="My NanoDegree Apps"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:elevation="16dp"
        android:textColor="#000000"
        android:layout_gravity="center"
        android:layout_margin="24dp"
        android:id="@+id/nano"
        android:textAlignment="center"
        android:textSize="30sp" />
    <TableLayout
        android:layout_width="250dp"
        android:layout_height="350dp"
        android:layout_gravity="center"
        >

    <Button
        android:text="Popular Movies"
        android:layout_height="wrap_content"
        android:id="@+id/movies"
        android:layout_margin="4dp"
        android:background="@color/buttons"
        android:elevation="10dp"
        android:layout_width="wrap_content"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:onClick="message1"/>

    <Button
        android:text="Stock Hawk "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:background="@color/buttons"
        android:id="@+id/stock"
        android:elevation="10dp"
        android:textAlignment="center"
        android:onClick="message2"/>

    <Button
        android:text="Build it Bigger "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:id="@+id/bigger"
        android:layout_gravity="center"
        android:background="@color/buttons"
        android:elevation="10dp"
        android:textAlignment="center"
        android:onClick="message3"/>

    <Button
        android:text="Make Your App Material "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/buttons"
        android:id="@+id/material"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:onClick="message4"/>

    <Button
        android:text="Go Ubiquitous "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:background="@color/buttons"
        android:elevation="10dp"
        android:textAlignment="center"
        android:onClick="message5"/>

    <Button
        android:text="Capstone "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/capstone"
        android:layout_margin="4dp"
        android:background="@color/buttons"
        android:layout_gravity="center"
        android:elevation="10dp"
        android:textAlignment="center"
        android:onClick="message6"/>
    </TableLayout>
</LinearLayout>